# --------------------------------------------------------------------
# 1. Environment Variables
# --------------------------------------------------------------------

export BASH_SILENCE_DEPRECATION_WARNING=1
export EDITOR='vim'
export GPG_TTY=$(tty)
export GOPATH=$HOME/go
export JSH=$HOME/.jsh
export JSH_CUSTOM="$HOME/.jsh_local"
export PATH=$HOME/.bin:$PATH
export SH=$(echo $SHELL | awk -F'/' '{print $NF}')
export TERM="xterm-256color"
export VISUAL=vim

# Color palette
# ----------------------------------------------------------
BLACK=$(tput setaf 0); [[ $(uname) == "Darwin" ]] && black="\033[30m" || black="\[\033[30m\]"
RED=$(tput setaf 1); [[ $(uname) == "Darwin" ]] && red="\033[31m" || red="\[\033[31m\]"
GREEN=$(tput setaf 2); [[ $(uname) == "Darwin" ]] && green="\033[32m" || green="\[\033[32m\]"
ORANGE=$(tput setaf 3); [[ $(uname) == "Darwin" ]] && orange="\033[33m" || orange="\[\033[33m\]"
BLUE=$(tput setaf 4); [[ $(uname) == "Darwin" ]] && blue="\033[34m" || blue="\[\033[34m\]"
