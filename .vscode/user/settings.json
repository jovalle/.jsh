    "file": true,
    "find": true,
    "gh": true,
    "git branch": true,
    "git checkout": true,
    "git commit": false,
    "git config": true,
    "git diff": true,
    "git fetch": true,
    "git log": true,
    "git ls-remote": true,
    "git remote": true,
