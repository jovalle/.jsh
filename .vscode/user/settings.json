    "nslookup": true,
    "nx": true,
    "od": true,
    "openssl": true,
    "osascript": true,
    "ping": true,
    "pip": true,
    "plutil": true,
    "printf": true,
    "pwd": true,
    "pwsh.exe": true,
    "pytest": true,
    "sed": true,
    "shellcheck": true,
    "source ~/.zshrc": {
      "approve": true,
      "matchCommandLine": true
    },
    "ss": true,
    "ssh": true,
    "stow": true,
    "strings": true,
    "tail": true,
    "tar": true,
    "task": true,
    "tee": true,
    "timeout": true,
    "touch": true,
    "true": true,
    "type": true,
    "uname": true,
    "unix2dos": true,
    "uv": true,
    "wc": true,
    "wget": true,
    "whence": true,
    "which": true,
    "whoami": true,
    "xattr": true,
    "xxd": true,
    "yarn": true,
    "zsh": true
  },
  "dev.containers.executeInWSL": true,
  "diffEditor.experimental.showMoves": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": true,
  "diffEditor.useInlineViewWhenSpaceIsLimited": false,
  "diffEditor.wordWrap": "on",
  "editor.acceptSuggestionOnEnter": "off",
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "JetBrainsMono NF, Menlo, monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 12,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.bracketPairsHorizontal": true,
  "editor.guides.highlightActiveBracketPair": true,
  "editor.hover.delay": 1000,
  "editor.inlineSuggest.enabled": true,
  "editor.insertSpaces": true,
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.rulers": [100],
  "editor.stickyScroll.enabled": true,
  "editor.tabSize": 2,
  "editor.unicodeHighlight.ambiguousCharacters": true,
  "editor.wordWrap": "on",
  "eslint.enable": true,
  "eslint.validate": ["javascript", "typescript"],
  "explorer.autoReveal": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,
  "extensions.ignoreRecommendations": true,
  "files.associations": {
    "*.list": "dotenv",
    "*.yaml.*": "yaml"
  },
  "files.eol": "\n",
  "files.exclude": {
    "**/.git": true,
    "**/.pytest_cache": true,
    "**/__pycache__": true,
    "**/node_modules": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.fetchOnPull": true,
  "git.inputValidationLength": 72,
  "git.inputValidationSubjectLength": 50,
  "git.openRepositoryInParentFolders": "always",
  "git.pruneOnFetch": true,
  "git.replaceTagsWhenPull": true,
  "github.copilot.advanced": {
    "debug.filterLogCategories": [],
    "debug.overrideEngine": "",
    "debug.overrideProxyUrl": "",
    "debug.testOverrideProxyUrl": ""
  },
  "github.copilot.enable": {
    "*": true,
    "markdown": true,
    "plaintext": true,
    "scminput": false
  },
  "github.copilot.nextEditSuggestions.enabled": true,
  "gitlens.advanced.messages": {
    "suppressGitMissingWarning": true,
    "suppressLineUncommittedWarning": true
  },
  "go.formatTool": "goimports",
  "go.toolsManagement.autoUpdate": true,
  "go.useLanguageServer": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "makefile.configureOnOpen": true,
  "material-icon-theme.folders.theme": "specific",
  "prettier.requireConfig": true,
  "python.analysis.typeCheckingMode": "standard",
  "python.defaultInterpreterPath": "/usr/local/bin/python",
  "redhat.telemetry.enabled": false,
  "remote.SSH.configFile": "~/.ssh/config",
  "remote.SSH.remotePlatform": {
    "gateway": "linux",
    "mothership": "linux",
    "ms-01": "linux",
    "ms-02": "linux",
    "ms-03": "linux",
    "nexus": "linux",
    "stargate": "linux",
    "starport": "linux",
    "warpgate": "linux",
    "watchtower": "linux"
  },
  "remote.SSH.suppressWindowsSshWarning": true,
  "remote.SSH.useExecServer": true,
  "remote.SSH.useLocalServer": false,
  "runOnSave.commands": [
    {
      "command": "perl -i -pe 'BEGIN{$/=undef} s/^\\s+//s' ${file}",
      "finishStatusMessage": "",
      "runIn": "backend",
      "runningStatusMessage": ""
    }
  ],
  "scm.defaultViewMode": "tree",
  "search.defaultViewMode": "tree",
  "security.workspace.trust.enabled": false,
  "security.workspace.trust.untrustedFiles": "open",
  "settingsSync.ignoredExtensions": [],
  "settingsSync.ignoredSettings": [],
  "shellcheck.enable": true,
  "shellcheck.run": "onSave",
  "shellformat.flag": "-i 2 -ci -sr",
  "sync.autoDownload": true,
  "sync.autoUpload": true,
  "sync.quietSync": true,
  "telemetry.telemetryLevel": "off",
  "terminal.external.osxExec": "Terminal.app",
  "terminal.external.windowsExec": "C:\\WINDOWS\\System32\\wsl.exe",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.defaultProfile.windows": "Debian (WSL)",
  "terminal.integrated.fontFamily": "JetBrainsMono NF, Meslo, Menlo, monospace",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.gpuAcceleration": "on",
