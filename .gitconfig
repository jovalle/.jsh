[core]
  quotepath = false
  excludesfile = git/.gitignore
  autocrlf = input
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  editor = vim
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[push]
  default = simple
[pull]
  rebase = true
[rebase]
  autoStash = true
[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
