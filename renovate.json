{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "git-submodules": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": ["git-submodules"],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true,
      "schedule": ["before 6am on monday"]
    }
  ]
}
